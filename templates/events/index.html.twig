                    <br><a href="{{ path('events_new') }}"><button type="button" class="btn btn-primary mt-2">Create new</button></a>
                
            </div>
            </div>
            </div>
            </div>
                    
            
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
