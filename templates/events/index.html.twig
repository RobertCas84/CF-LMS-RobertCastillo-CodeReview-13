    <h1>Events</h1>

    
        
        {% for event in events %}
            <div class="container">
            <div class"row">
       
            <div class="card">
            <h5 class="card-header">{{ event.eventname }}</h5>
            <div class="card-body">
            <img src="{{ event.eventimage }}" class="card-img-top" alt="...">
            <h5 class="card-title">{{event.eventdatestarttime}}</h5>
